<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uga.cs4060.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pedagogy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TeacherMenuActivity" />
        <activity
            android:name=".TeacherMenuElement"
            android:label="@string/title_activity_teacher_menu_element"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentMenuActivty"
            android:label="@string/title_activity_student_menu_activty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentActivityMenuElement"
            android:label="@string/title_activity_student_menu_element"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ClassList"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>